@inherits System.Web.WebPages.WebPage
<div>
	<div class="desktop_registerbox">
		@if (Model.RegisterLink.IsAuthenticated)
		{
			<div class="dropdown">


				<a href="#" role="button" class="dropdown-toggle" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
					@if (Model.RegisterLink.ShowNotification && Model.RegisterLink.NotificationCount > 0)
					{
						<div class="registerlink-notification-profile">
							<div class="registerlink-notification-icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="20" width="20"><path d="M224 512c35.32 0 63.97-28.65 63.97-64H160.03c0 35.35 28.65 64 63.97 64zm215.39-149.71c-19.32-20.76-55.47-51.99-55.47-154.29 0-77.7-54.48-139.9-127.94-155.16V32c0-17.67-14.32-32-31.98-32s-31.98 14.33-31.98 32v20.84C118.56 68.1 64.08 130.3 64.08 208c0 102.3-36.15 133.53-55.47 154.29-6 6.45-8.66 14.16-8.61 21.71.11 16.4 12.98 32 32.1 32h383.8c19.12 0 32-15.6 32.1-32 .05-7.55-2.61-15.27-8.61-21.71z" /></svg>
								<sup><strong>@Model.RegisterLink.NotificationCount</strong></sup>
							</div>
						</div>
					}
					@if (Model.RegisterLink.ShowAvatar)
					{
						<img class="useravatar" title="@Model.RegisterLink.UserInfo.DisplayName" alt="@Model.RegisterLink.UserInfo.DisplayName" src="@Model.RegisterLink.PhotoURL" />
					}
					<span class="display-name">@Model.RegisterLink.UserInfo.DisplayName</span>

				</a>



				<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
					@if (Model.RegisterLink.ShowNotification && Model.RegisterLink.NotificationCount > 0)
					{
						<li>
							<a class="registerlink-notification" onclick="OpenPopUp('',600,'right','[LS:Notification]','@Model.RegisterLink.NotificationExtensionURL')">
								<div class="registerlink-notification-icon">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="14" width="14"><path d="M224 512c35.32 0 63.97-28.65 63.97-64H160.03c0 35.35 28.65 64 63.97 64zm215.39-149.71c-19.32-20.76-55.47-51.99-55.47-154.29 0-77.7-54.48-139.9-127.94-155.16V32c0-17.67-14.32-32-31.98-32s-31.98 14.33-31.98 32v20.84C118.56 68.1 64.08 130.3 64.08 208c0 102.3-36.15 133.53-55.47 154.29-6 6.45-8.66 14.16-8.61 21.71.11 16.4 12.98 32 32.1 32h383.8c19.12 0 32-15.6 32.1-32 .05-7.55-2.61-15.27-8.61-21.71z" /></svg>
									<span>[LS:Notification]</span>
								</div>
								<span class="badge">@Model.RegisterLink.NotificationCount</span>
							</a>
						</li>
					}


					<li>
						<a class="profile-link" href="@Model.RegisterLink.UserProfileURL">
							<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="14" width="14"><path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path></svg>
							<span>[LS:MyProfile]</span>
						</a>
					</li>
					<li>
						<a class="login-link" href="@Model.LoginLink.Url">
							<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="14" width="14"><path d="M400 54.1c63 45 104 118.6 104 201.9 0 136.8-110.8 247.7-247.5 248C120 504.3 8.2 393 8 256.4 7.9 173.1 48.9 99.3 111.8 54.2c11.7-8.3 28-4.8 35 7.7L162.6 90c5.9 10.5 3.1 23.8-6.6 31-41.5 30.8-68 79.6-68 134.9-.1 92.3 74.5 168.1 168 168.1 91.6 0 168.6-74.2 168-169.1-.3-51.8-24.7-101.8-68.1-134-9.7-7.2-12.4-20.5-6.5-30.9l15.8-28.1c7-12.4 23.2-16.1 34.8-7.8zM296 264V24c0-13.3-10.7-24-24-24h-32c-13.3 0-24 10.7-24 24v240c0 13.3 10.7 24 24 24h32c13.3 0 24-10.7 24-24z"></path></svg>
							<span>[LS:Data.Block.RegisterLink.LogoutText]</span>
						</a>
					</li>
				</ul>
			</div>
		}
		else
		{
			if (Model.RegisterLink.ShowSignInLink)
			{
				<a href="@Model.LoginLink.Url" class="loginuser">
					<span>[LS:Data.Block.RegisterLink.LoginText]</span>
				</a>
			}
			else
			{
				<span>[LS:Data.Block.RegisterLink.LoginText]</span>
			}
		}
	</div>

	<div class="mobile_registerbox">
		@if (Model.RegisterLink.IsAuthenticated)
		{
			<a class="mobile-registerbox-btn" data-bs-toggle="modal" data-bs-target="#mobile_registerbox" href="#">
				<span class="visually-hidden">User Information</span>
				<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="23" width="23"><path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path></svg>
				@if (Model.RegisterLink.ShowNotification && Model.RegisterLink.NotificationCount > 0)
				{
					<sup><strong>@Model.RegisterLink.NotificationCount</strong></sup>
				}
			</a>
			<div class="modal fade" id="mobile_registerbox" tabindex="-1" aria-labelledby="mobile_registerbox_title" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="mobile_registerbox_title">[LS:Data.Block.RegisterLink.LoginText]</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body text-center">
							@if (Model.RegisterLink.ShowAvatar)
							{
								<a href="@Model.RegisterLink.UserProfileURL">
									<img class="useravatar" title="@Model.RegisterLink.UserInfo.DisplayName" alt="@Model.RegisterLink.UserInfo.DisplayName" src="@Model.RegisterLink.PhotoURL" />
								</a>

							}
							<div>
								<a class="myaccount-items display-name" href="@Model.RegisterLink.UserProfileURL">
									@Model.RegisterLink.UserInfo.DisplayName
								</a>
							</div>
							@if (Model.RegisterLink.ShowNotification && Model.RegisterLink.NotificationCount > 0)
							{
								<div class=" text-start">

									<a class="myaccount-items registerlink-notification" onclick="OpenPopUp('',600,'right','[LS:Notification]','@Model.RegisterLink.NotificationExtensionURL')">
										<div class="registerlink-notification-icon">
											<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="14" width="14"><path d="M224 512c35.32 0 63.97-28.65 63.97-64H160.03c0 35.35 28.65 64 63.97 64zm215.39-149.71c-19.32-20.76-55.47-51.99-55.47-154.29 0-77.7-54.48-139.9-127.94-155.16V32c0-17.67-14.32-32-31.98-32s-31.98 14.33-31.98 32v20.84C118.56 68.1 64.08 130.3 64.08 208c0 102.3-36.15 133.53-55.47 154.29-6 6.45-8.66 14.16-8.61 21.71.11 16.4 12.98 32 32.1 32h383.8c19.12 0 32-15.6 32.1-32 .05-7.55-2.61-15.27-8.61-21.71z" /></svg>
											<span>[LS:Notification]</span>
										</div>
										<span class="badge">@Model.RegisterLink.NotificationCount</span>
									</a>
								</div>
							}


							<div class="text-start">
								<a class="myaccount-items profile-link" href="@Model.RegisterLink.UserProfileURL">
									<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="14" width="14"><path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path></svg>
									[LS:MyProfile]
								</a>
							</div>
							<div class="text-start">
								<a class="myaccount-items login-link" href="@Model.LoginLink.Url">
									<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="14" width="14"><path d="M400 54.1c63 45 104 118.6 104 201.9 0 136.8-110.8 247.7-247.5 248C120 504.3 8.2 393 8 256.4 7.9 173.1 48.9 99.3 111.8 54.2c11.7-8.3 28-4.8 35 7.7L162.6 90c5.9 10.5 3.1 23.8-6.6 31-41.5 30.8-68 79.6-68 134.9-.1 92.3 74.5 168.1 168 168.1 91.6 0 168.6-74.2 168-169.1-.3-51.8-24.7-101.8-68.1-134-9.7-7.2-12.4-20.5-6.5-30.9l15.8-28.1c7-12.4 23.2-16.1 34.8-7.8zM296 264V24c0-13.3-10.7-24-24-24h-32c-13.3 0-24 10.7-24 24v240c0 13.3 10.7 24 24 24h32c13.3 0 24-10.7 24-24z"></path></svg>
									[LS:Data.Block.RegisterLink.LogoutText]
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
		else
		{
			if (Model.RegisterLink.ShowSignInLink)
			{
				<a href="@Model.LoginLink.Url" class="loginuser">
					<span class="visually-hidden">[LS:Data.Block.RegisterLink.LoginText]</span>
					<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="23" width="23"><path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path></svg>
				</a>
			}
			else
			{
				<span class="visually-hidden">[LS:Data.Block.RegisterLink.LoginText]</span>
				<svg aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="23" width="23"><path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path></svg>
			}
		}
	</div>
</div>